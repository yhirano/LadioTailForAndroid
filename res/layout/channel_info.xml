<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@color/channel_info_buttons_background">
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textAppearance="@android:style/TextAppearance.Large"
			android:gravity="center" android:id="@+id/TitleTextView" />
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textAppearance="@android:style/TextAppearance.Medium"
			android:gravity="center" android:id="@+id/DjTextView" />
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:padding="8sp">
			<ImageButton android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true" android:background="@null"
				android:id="@+id/PlayStopImageButton" />
			<ImageButton android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true" android:background="@drawable/site_button"
				android:id="@+id/SiteImageButton" />
		</RelativeLayout>
	</LinearLayout>
	<com.google.ads.AdView android:id="@+id/TopAd"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		ads:adUnitId="a14d5d52ed7c197" ads:adSize="BANNER" ads:loadAdOnCreate="true" />
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_centerHorizontal="true">
		<FrameLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true" android:id="@+id/OnBackButtonFrameLayout"
			android:background="@color/channel_info_buttons_background"
			android:padding="3sp">
			<Button android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="@string/back"
				android:id="@+id/BackButton" />
		</FrameLayout>
		<ListView android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:layout_alignParentTop="true"
			android:focusable="false" android:layout_above="@id/OnBackButtonFrameLayout"
			android:id="@+id/ChannelInfoListView" />
	</RelativeLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_weight="1">
			<TextView android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:textAppearance="@android:style/TextAppearance.Medium"
				android:singleLine="true" android:id="@+id/ChannelTitleTextView" />
			<TextView android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:textAppearance="@android:style/TextAppearance.Small"
				android:singleLine="true" android:id="@+id/ChannelDjTextView" />
		</LinearLayout>
		<ImageView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:padding="2sp"
			android:id="@+id/PlayingImageView" />
	</LinearLayout>
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textAppearance="@android:style/TextAppearance.Small"
			android:singleLine="true" android:layout_alignParentLeft="true"
			android:id="@+id/ChannelListenersTextView" />
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textAppearance="@android:style/TextAppearance.Small"
			android:singleLine="true" android:layout_alignParentRight="true"
			android:id="@+id/ChannelDateTextView" />
	</RelativeLayout>
</LinearLayout>
